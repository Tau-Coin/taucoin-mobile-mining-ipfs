<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomToolBar">
        <attr name="android:background" />
        <attr name="enableLeftTextView" format="boolean" />
        <attr name="enableRightTextView" format="boolean" />
        <attr name="disableRightView" format="boolean" />
        <attr name="enableGoBackEvent" format="boolean" />
    </declare-styleable>

    <declare-styleable name="UserInfoLayout">
        <attr name="viewBackground" format="integer|reference" />
        <attr name="viewHeaderSrc" format="integer|reference" />
        <attr name="viewNickName" format="string" />
        <attr name="viewBalance" format="integer" />
        <attr name="viewBalance1" format="integer" />
    </declare-styleable>

    <declare-styleable name="ItemLineView">
        <attr name="leftImage" format="reference" />
        <attr name="rightText" format="string" />
        <attr name="rightTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ItemTextView">
        <attr name="itemLeftText" format="string" />
        <attr name="itemLeftTextColor" format="color" />
        <attr name="itemRightImage" format="reference" />
        <attr name="itemImageRotation" format="integer" />
        <attr name="itemRightText" format="string" />
        <attr name="itemRightTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ToolbarView">
        <attr name="leftBackImage" format="reference" />
        <attr name="rightImage" format="reference" />
        <attr name="leftImagePadding" format="dimension" />
        <attr name="titleText" format="string" />
        <attr name="titleBackground" format="color" />
    </declare-styleable>

    <declare-styleable name="EmptyLayout">
        <attr name="empty_text" format="string" />
        <attr name="empty_textColor" format="color|reference" />
        <attr name="empty_tip" format="string" />
        <attr name="empty_textSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ProgressView">
        <attr name="center_text" format="string" />
        <attr name="center_image" format="string" />
        <attr name="center_textSize" format="float" />
    </declare-styleable>

    <declare-styleable name="DashboardView">
        <attr name="antiAlias" />
        <attr name="startAngle" />
        <attr name="sweepAngle" />
        <attr name="animTime" />
        <attr name="maxValue" />
        <attr name="value" />
        <!-- Arc width -->
        <attr name="arcWidth" />
        <attr name="pointWidth" />
        <attr name="pointArcColor"  format="color|reference"/>
        <attr name="pointRadius" />
        <attr name="arcColors" />
        <!-- Background arc color -->
        <attr name="bgArcColor" format="color|reference"/>
        <!-- Background arc width -->
        <attr name="bgArcWidth" format="dimension" />
    </declare-styleable>
</resources>