<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@color/color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <io.taucoin.android.wallet.widget.MultilineTextView
        android:id="@+id/tv_title"
        style="@style/style_super_yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:lineSpacingExtra="5dp"
        android:text="@string/forum_switched_fast_title" />

    <TextView
        style="@style/style_middle_grey_light"
        android:id="@+id/tv_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:text="@string/forum_switched_fast_content"
        android:layout_height="wrap_content"/>

</LinearLayout>