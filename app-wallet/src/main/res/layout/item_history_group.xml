<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:background="@color/color_home_bg"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/white_rect_round_bg_no_border">

        <TextView
            android:id="@+id/tv_amount"
            style="@style/style_big_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/style_normal_light_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:lineSpacingExtra="3.5dp"
            android:layout_toEndOf="@+id/tv_amount"
            android:gravity="end"
            android:text="" />

        <FrameLayout
            android:id="@+id/fl_read_status"
            android:background="@drawable/yellow_rect_small_round_bg"
            android:layout_width="10dp"
            android:layout_height="match_parent">

            <View
                android:background="@color/color_white"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_height="match_parent"/>

        </FrameLayout>
    </RelativeLayout>
</LinearLayout>